<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DropNDispense" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gray_800</item>
        <item name="colorSecondaryVariant">@color/gray_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.DropNDispense.HeadlineLarge</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.DropNDispense.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.DropNDispense.BodyMedium</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.DropNDispense.Button</item>
        <item name="textInputStyle">@style/Widget.DropNDispense.TextInputLayout</item>
    </style>

    <style name="Theme.DropNDispense" parent="Base.Theme.DropNDispense">
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- NoActionBar variant -->
    <style name="Theme.DropNDispense.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.DropNDispense.HeadlineLarge" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DropNDispense.BodyLarge" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="TextAppearance.DropNDispense.BodyMedium" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <!-- Component Styles -->
    <style name="Widget.DropNDispense.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">4dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="rippleColor">@color/gray_600</item>
    </style>

    <!-- Text Links Style -->
    <style name="TextAppearance.DropNDispense.Link" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.DropNDispense.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gray_300</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/gray_600</item>
        <item name="android:textColorHint">@color/gray_400</item>
    </style>
</resources>